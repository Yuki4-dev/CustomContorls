<Window x:Class="CustomContorls.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CustomContorls" xmlns:controls="clr-namespace:CustomContorls.Controls"
        mc:Ignorable="d"
        Width="550"
        Height="350"
        Title="MainWindow">
    
    <Grid>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <ListBox>
            <ListBoxItem Selected="ScrolBar_Selected">ScrolBar</ListBoxItem>
            <ListBoxItem Selected="ComboBox_Selected">ComboBox</ListBoxItem>
        </ListBox>

        <Frame x:Name="ContentFrame"
               Padding="12"
               Grid.Column="1" 
               NavigationUIVisibility="Hidden"/>

    </Grid>
    
</Window>
