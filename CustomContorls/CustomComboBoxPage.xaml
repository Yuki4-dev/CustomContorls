    </Page.Resources>

    <Grid>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <StackPanel>
            <ComboBox ItemsSource="{StaticResource Items}"/>
        </StackPanel>

        <StackPanel Grid.Column="1">
            <controls:CustomComboBox ItemsSource="{StaticResource Items}"/>
        </StackPanel>

        <StackPanel Grid.Column="2">
            <controls:CustomComboBox PopupScrollBarBrush="BlueViolet"
                                     SelectVisual="Tab"
                                     FontSize="18"
                                     ItemMargin="4"
                                     ButtonCornerRadius="8"
                                     PopupCornerRadius="8"
                                     ItemSelectCornerRadius="4"
                                     SelectedItemBrush="BlueViolet"
                                     BorderThickness="0"
                                     PopupBorderBrush="BlueViolet"
                                     Background="WhiteSmoke"
                                     Foreground="BlueViolet"
                                     ItemsSource="{StaticResource Items}"/>
        </StackPanel>

    </Grid>
</Page>
